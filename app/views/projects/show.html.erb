<div class="card z-depth-1 cadet-blue-box">
    <div class="row center center-align">
      <div class="col s2">
        <span id="title"><%= @project.title %></span>
      </div>
      <div class="col s2">
        <ul id="project-list-small">
          <li ><%= @project.humanized_labels %> </li>
          <li id="priority"><%= @project.priority %></li>
        </ul>
      </div>
      <div class="col s6">
        <article> Summary: <%= @project.summary %> </article>
      </div>
      <div class="col s2">
        <ul>
          <li ><%= link_to 'Delete', project_path(@project), method: :delete, class:"waves-effect waves-light btn", id:"delete"%></li>
          <li> <%= link_to 'Edit', edit_project_path(@project), class: "waves-effect waves-light btn"%></li>
        </ul>
      </div>
    </div>


  </br>
  </br>


  <!-- Modal Trigger -->
  <a class="waves-effect waves-light btn right" href="#modal1">Add a Note</a>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <%= simple_form_for @note, url: project_notes_path(@project)  do |f| %>

              <%= f.input :note_text %>
              <br/>
              <br/>
              <%= f.submit 'Add', class:"modal-action modal-close waves-effect waves-green btn right" %>
              <br/>
      <% end %>
    </div>
  </div>



  <br/>
  <br/>

  <div class="row">
    <% if @project.notes.present? %>
        <% @project.notes.each do |note| %>
        <div class="col s4">
          <%= link_to project_note_path(@project ,note) do %>
          <div class="card medium note-color z-depth-1 hoverable">
            <div class="card-content white-text">
                <%= note.note_text %>
              </div>
            </div>
          <%end %>
        </div>
        <%end %>
    <%end %>
  </div>

</div>
