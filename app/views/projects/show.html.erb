<div class="page-border">
  <div class="row">
    <div class="col s12">
      <div class="card z-depth-1 cadet-blue-box">
        <div class="row">
          <div class="col s12 center-align">
            <h1 class="truncate"><%= @project.title %></h1>
            <% @project.priority.times do %>
              <i class="fa fa-circle" aria-hidden="true"></i>
            <% end %>
            <% @priority_dif.times do %>
              <i class="fa fa-circle-thin" aria-hidden="true"></i>
            <% end %>
          </div>
        <div class="col s12 center-align">
          <p class="summary"><%= @project.summary %> </p>
        </div>
        <div class="col s12">
          <ul class="category-small">
            <% if @project.humanized_labels["Artwork"] %>
              <li class="art-image"></li>
            <% end %>
            <% if @project.humanized_labels["Architecture"] %>
              <li class="arch-image"></li>
            <% end %>
            <% if @project.humanized_labels["Furniture"] %>
              <li class="furn-image"></li>
            <% end %>
            <% if @project.humanized_labels["Craft"] %>
              <li class="craft-image"></li>
            <% end %>
            <% if @project.humanized_labels["App"] %>
              <li class="app-image"></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_project_path(@project)%>
        <%= link_to 'Delete', project_path(@project), method: :delete%>
      </div>
    </div>
  </div>
  <br/>
  <!-- Modal Triggers -->
  <div class="row img-container center-align">
    <div class="col s6 l3">
      <a  class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Add a note" href="#modal1"><%=image_tag("specs.svg", :alt => "test")%></a>
    </div>
    <div class="col s6 l3">
      <a  class="tooltipped svg" data-position="bottom" data-delay="50" data-tooltip="Add a photo" href="#modal2"><%=image_tag("photo.svg", :alt => "test")%></a>
    </div>
    <div class="col s6 l3">
      <a  class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Add a schedule" href="#modal3"><%=image_tag("date.svg", :alt => "test")%></a>
    </div>
    <div class="col s6 l3">
      <a  class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Add a link" href="#modal4"><%=image_tag("link.svg", :alt => "test")%></a>
    </div>
  </div>
  <!-- Modal Structure -->
  <%= simple_form_for @note, url: project_notes_path(@project)  do |f| %>
    <div id="modal1" class="modal">
      <div class="modal-content">
        <%= f.input :note_text %>
        <%= f.submit 'Add', class:"modal-action modal-close waves-effect waves-green btn right" %>
        <br/>
      </div>
    </div>
  <% end %>
  <br/>
  <div class="row">
    <% if @project.notes.present? %>
      <% @project.notes.each do |note| %>
        <div class="col s12 l4">
          <%= link_to project_note_path(@project ,note) do %>
            <div class="yellow-note z-depth-1 hoverable">
              <div class="card-content">
                <%= note.note_text %>
              </div>
            </div>
          <%end %>
        </div>
      <%end %>
    <%end %>
  </div>



</div>
