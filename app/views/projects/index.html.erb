<div class="row">
  <div class="col s10 offset-s2">
    <%= simple_form_for @project do |f| %>
        <%= f.input_field :label, label:"Category", as: :radio_buttons, collection: Project::LABELS  %>
        <a class="waves-effect waves-light btn"><%= f.submit 'Create' %></a>
    <% end %>
  </div>

</div>

<br/>
<br/>


<div class="row">
      <% @projects.each do |project| %>
        <div class="col s12 l3">
            <%= link_to project_path(project) do %>
            <div class="card green accent-2 z-depth-1 hoverable">
              <div class="card-content black-text">
              <span class="card-title"> <%= project.title %></span>
                <br/>
                <%= project.humanized_labels %>
              </div>
            </div>
          <% end %>
          </div>
        <% end %>

</div>
